[colors]
background-alt = ${xrdb:color0:#222}
background = #525252
;background-alt = #282828
;foreground = ${xrdb:color7:#222}
foreground = #fff
foreground-alt = #000
primary = #ffb52a
secondary = #e60053
alert = #bd2c40


[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 32
;offset-x = 10%
offset-y = 1%
radius = 10.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 4
line-color = #f00

